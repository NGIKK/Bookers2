<div class ="container px-5 px-sm-0" >

 <div class ="row ">
  <div class ="col-md-3">
   <%= render'books/user_info',user: @user %>

  <div class="row">
  <%= render'books/edit_user',user: @user %>
  </div>

   <div>
   <%= render'books/new_book', book: @book_new %>
   </div>

  </div>

  <div class="col-md-8 offset-md-1">
  <h2>Users</h2>

  <table class ="table table-hover table-inverse">
    
    <tr>
     <th>image</th>
     <th>name</th>
     <th></th>
    </tr>
    
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(100,100) %>
      </td>

      <td>
        <%= user.name %>
      </td>

      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
      
      </tr>
      <% end %>

  </table>

  </div>
 </div>
</div>