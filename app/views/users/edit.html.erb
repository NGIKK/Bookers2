
<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Users info</h2>

    <% if @user.errors.any? %>
    <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
     <% @user.errors.full_messages.each do |message|%>
     <li><%= message %></li>
     <% end %>
    </ul>
    <% end %>

     <%= form_with model: @user,url:user_path(@user.id),method: :patch do |f| %>
     <div class = "form-group">
     <label for = "inputName">Name</label></br>
     <%= f.text_field :name,autofocus: true, class: "form-control" %>
     </div>

     <div class = "form-group">
     <label for = "inputImage">Image</label></br>
     <%= f.file_field :profile_image, accept: "image/*" %>
     </div>

     <div class = "form-group">
     <label for ="inputIntoroduction">Introduction</label></br>
     <%= f.text_area :introduction, class: "form-control"%>
     </div>

     <div>
       <%= f.submit "Update User", class: "btn btn-secondary"%>
     </div>

     <% end %>

   </div>
  </div>
</div>

