<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Users info</h2>

     <%= form_with model: @book ,url:book_path(@book.id),method: :patch do |f| %>
     <div>
     <label for = "inputName">Title</label></br>
     <%= f.text_field :title,autofocus: true%>
     </div>

     <div>
     <label for ="inputIntoroduction">Opinion</label></br>
     <%= f.text_area :body%>
     </div>

     <div>
       <%= f.submit "Update Book", class: "btn btn-secondary"%>
     </div>

     <% end %>
     
     <div>
     <%= link_to "show", book_path(@book.id) %> | 
     <%= link_to "Back", "/books" %>
     </div>

   </div>
  </div>