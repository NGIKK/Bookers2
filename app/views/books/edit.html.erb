<div class="container">

 
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Editing Book</h2>
        <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
       <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
       </ul>
      <% end %>

     <%= form_with model: @book ,url:book_path(@book.id),method: :patch do |f| %>
     <div>
     <label for = "inputName">Title</label></br>
     <%= f.text_field :title,autofocus: true%>
     </div>

     <div>
     <label for ="inputIntoroduction">Opinion</label></br>
     <%= f.text_area :body%>
     </div>

     <div>
       <%= f.submit "Update Book", class: "btn btn-success"%>
     </div>

     <% end %>
     
     <div>
     <%= link_to "show", book_path(@book.id) %> | 
     <%= link_to "Back", "/books" %>
     </div>

   </div>
  </div>