<div class ="container px-5 px-sm-0" >

 <div class ="row ">
  <div class ="col-md-3">
   <%= render'user_info',user: @book.user %>

  <div class="row">
   <%= render'edit_user',user: @user %>
  </div>

    <div>
      <%= render"new_book",book: @book_new %>
    </div>
  </div>


 <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>

   <table class ="table table-hover table-inverse">

     <tr>
       <td>
         <%= link_to user_path(@book.user_id) do %>
         <%= image_tag @book.user.get_profile_image(100,100) %>
         <% end %></br>
         <%= link_to @book.user.name, user_path(@book.user_id)%>
       </td>

      <td>
        <%= link_to book_path(@book.id) do%>
        <%= @book.title %>
        <% end %>
      </td>

      <td>
        <%= @book.body %>
      </td>
      
      <% if @book.user == current_user %>
      <td><%= link_to "Edit",edit_book_path(@book.id), class:"btn btn-success"%>
        
      </td>
      
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm"=>"本当に消しますか？",  class:"btn btn-danger" %></td>
      <% end %>
      </tr>

    </table>
  </div>
</div>

